    <%- include('../includes/navigation.ejs') %> 

    <main class="flex-grow">
        <div class="p-20 flex items-center justify-center">
            <div class="border border-t-8 border-black shadow-xl rounded-lg p-10">
              <form action="/signup", method="POST">
                <div class="mb-0.5 pl-1">
                  <label for="name">Name</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <input class="border border-black rounded-lg w-full py-2 px-4" type="text" placeholder="UserName" name="name" id="name">
                </div>
          
                <div class="mb-0.5 pl-1">
                  <label for="email">Email</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <input class="border border-black rounded-lg w-full py-2 px-4 type=" email" placeholder="Email ID" name="email" id="email">
                </div>
          
                <div class="mb-0.5 pl-1">
                  <label for="password">Password</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <input class="border border-black rounded-lg w-full py-2 px-4 type=" text" placeholder="Password" name="password" id="password">
                </div>
          
                <div class="mb-0.5 pl-1">
                  <label for="confirmPassword">Confirm Password</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <input class="border border-black rounded-lg w-full py-2 px-4 type=" text" placeholder="Confirm Password" name="confirmPassword" id="confirmPassword">
                </div>
          
                <div class="mt-10 relative flex justify-center">
                  <button class="bg-black rounded-full py-4 px-8 text-white" type="submit">
                    SignUp!
                  </button>
                </div>
              </form>
            </div>
          </div>
    </main>
