<%- include('../includes/head.ejs') %>
    </head>

    <%- include('../includes/navigation.ejs') %> 
    <main class="flex-grow">
        <div class="p-20 flex items-center justify-center">
            <div class="border border-t-8 border-black shadow-xl rounded-lg p-10">
              <form action="/book" method="POST">
                <div class="mb-0.5 pl-1">
                  <label for="roomType">Room</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <select name="roomType" id="roomType" class="border border-black w-96 bg-white rounded-lg py-2 px-4">
                    <option value="Delux Room">Delux Room</option>
                    <option value="Twin Bed Room">Twin Bed Room</option>
                    <option value="Family Room">Family Room</option>
                  </select>
                </div>
          
                <div class="mb-0.5 pl-1">
                  <label for="checkInDate">Check In</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <input class="border border-black rounded-lg w-full py-2 px-4" type="date" name="checkInDate" id="checkInDate" value="2022-03-18">
                </div>
                
                 <div class="mb-0.5 pl-1">
                  <label for="checkOutDate">Check Out</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <input class="border border-black rounded-lg w-full py-2 px-4" type="date" name="checkOutDate" id="checkOutDate">
                </div>
                
                <div class="mb-0.5 pl-1">
                  <label for="numGuests">Guests</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <input class="border border-black rounded-lg w-full py-2 px-4" type="number" name="numGuests" id="numGuests" value="1" min="1">
                </div>

                <div class="mb-0.5 pl-1">
                  <label for="numRooms">Rooms</label>
                </div>
                <div class="w-96 shadow rounded-lg mb-4">
                  <input class="border border-black rounded-lg w-full py-2 px-4" type="number" name="numRooms" id="numRooms" value="1" min="1">
                </div>
          
                <div class="mt-10 relative flex justify-center">
                  <button class="bg-black rounded-full py-2 px-8 text-white">
                    Book!
                  </button>
                </div>
              </form>
            </div>
</div>
    </main>
        <%- include('../includes/footer.ejs') %>
    <%- include('../includes/end.ejs') %>